<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{{ title }}
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap" rel="stylesheet"> {% block stylesheets %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="{{ asset('styles/dashboard.css') }}"> {% block javascripts %}{% endblock %}
		</head>
		<body>
			<div class="container-fluid">
				<header>
					{% block header %}
						<nav>
							{% block nav %}
								<a href="{{ path('app_admin_dashboard') }}">Dashboard</a>
								|
								{% if is_granted('ROLE_SUPER_ADMIN') %}
									<a href="{{ path('app_admin_new_admin') }}">Create Admin</a>
									|
								{% endif %}

								{% if is_granted('ROLE_ADMIN')%}
									<a href="{{ path('app_listUsers') }}">Customers</a>
									|
								{% endif %}

								{% if is_granted('ROLE_ADMIN')%}
									<a href="{{ path('app_admin_list_categories') }}">Categories</a>
									|
									<a href="{{ path('app_admin_product') }}">Products</a>
									|
									<a href="{{ path('app_admin_listsales') }}">Discounts</a>
									|
									<a href="{{ path('app_index') }}" target="_blank" class="text-primary">Visit Shop</a>
									|
									<a href="{{ path('app_admin_logout') }}" class="text-danger">Log out</a>
								{% else %}
									<a href="{{ path('app_admin_login') }}">Login</a>
								{% endif %}
							{% endblock %}
						</nav>
					{% endblock %}
				</header>
				<main>
					{% block main %}{% endblock %}
				</main>

			</div>

			<footer>
				{% block footer %}{% endblock %}
			</footer>
		</body>
	</html>
