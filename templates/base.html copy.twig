		{% block stylesheets %}
			{{ ux_controller_link_tags() }}
		{% endblock %}
		{# {% block javascripts %}
						{% block importmap %}{{ importmap('app') }}{% endblock %}
						        {% endblock %} #}

	</head>
	<body>
		{% block header %}
			<header>
				<div class="top-nav">
					<div class="home-actions">
						<a href="{{ path('app_index') }}"><img src="{{ asset('asset/img/home.png') }}" alt="accueil" class="mr-2">Accueil</a>
					</div>
					<div
						class="account-actions">
						{# use this to protect links user shouldn't access unless fully connected #}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<a href="{{ path('app_user_account') }}"><img src="{{ asset('asset/img/account.png') }}" class="mr-2">
								Mon compte</a>
							<span></span>
							<a href="{{ path('app_user_history') }}"><img src="{{ asset('asset/img/history.png') }}" class="mr-2">
								Historique</a>
							<span></span>
							<a href="{{ path('app_logout') }}"><img src="{{ asset('asset/img/account2.png') }}" class="mr-2">
								Se déconnecter</a>
						{% else %}
							<a href="{{ path('app_login') }}"><img src="{{ asset('asset/img/account1.png') }}" alt="connexion" class="mr-2">
								Se connecter</a>
							<span></span>
							<a id="signup" href="{{ path('app_new_user') }}"><img src="{{ asset('asset/img/account.png') }}" alt="inscription" class="mr-2">
								S'inscrire</a>
						{% endif %}
					</div>
					<div class="cart-actions">
						{{ render(controller('App\\Controller\\PagesController::cartCount')) }}
					</div>
				</div>
				<div class="mid-nav">
					<div class="logo">
						<a href=""><img src="{{ asset('asset/img/logo.png') }}" alt="Logo"></a>
					</div>
					<div class="hamburger-btn">
						<button type="button" class="script-hamburger" onclick="displayMenu()" aria-expanded="false" aria-haspopup="true" aria-controls=".hamburger-menu" aria-label="Ouvrir le menu">
							<div class="icon-hamburger">
								<span></span>
								<span></span>
								<span></span>
							</div>
						</button>
					</div>
				</div>
				{# <div class="hamburger-menu" role="barre de navigation pour mobile">
												                    <ul>
												                        <li><img src="{{ asset('asset/img/arrow.png') }}" alt="arrow"><a href="{{ path('app_index') }}" aria-label="" >Catégorie 1</a></li>
												                        <li><img src="{{ asset('asset/img/arrow.png') }}" alt="arrow"><a href="{{ path('app_index') }}" aria-label="" >Catégorie 2</a></li>
												                        <li><img src="{{ asset('asset/img/arrow.png') }}" alt="arrow"><a href="{{ path('app_index') }}" aria-label="" >Catégorie 3</a></li>
												                        <li><img src="{{ asset('asset/img/arrow.png') }}" alt="arrow"><a href="{{ path('app_index') }}" aria-label="">Catégorie 4</a></li>
												                    </ul>
												                    <div>
												                        <a href="{{ path('app_index_categories') }}">Categories</a>
												                {{ render(controller(
												                'App\\Controller\\CategoryController::categoryLink'
												            )) }}
												                    </div>
												                </div> #}
			</header>
		{% endblock %}
		{% block main %}{% endblock %}
        {% block footer %}
