{% extends 'adminBase.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}


{% block main %}

	<br>
	<h2>
		<a href="{{ path('app_admin_dashboard') }}">Dashboard</a>
		>
		<a href="{{ path ('app_admin_list_categories')}}">Categories</a>
		>
		<a href="{{ path ('app_admin_show_category', {'id': category.id})}}">{{ category.name }}</a>

	</h2>
	<br>

	<table class="table table-light table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
			</tr>
			<tr></tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ category.name }}</td>
				<td>{{ category.description }}</td>
			</tr>
		</tbody>
	</table>

	<br>

	<a href="{{ path('app_admin_update_category', {'id': category.id}) }}" class="btn btn-primary">Edit</a>
	<a href="{{ path('app_admin_delete_category', {'id': category.id, 'token': csrf_token('delete'~category.getId())}) }}" onclick="return confirm('Are you sure you want to delete this category?')" class="btn btn-danger">Remove</a>
	<a href="{{ path('app_admin_create_category', {'id': category.id}) }}" class="btn btn-primary">Create new category</a>
	<a href="{{ path ('app_admin_list_categories')}}" class="btn btn-secondary">Categories list</a>

{% endblock %}
