{% extends 'adminBase.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}


{% block main %}


	<br>
	<h2>
		<a href="{{ path('app_admin_dashboard') }}">Dashboard</a>
		>

		<a href="{{ path ('app_index_categories')}}">Categories</a>
	</h2>
	<br>

	<a href="{{ path('app_admin_create_category') }}" class="btn btn-primary">Create a new category</a>
	<br><br>

	<table class="table table-light table-striped">
		<thead>
			<th>Categories</th>
			<th colspan="2">Actions</th>
		</thead>

		{% if (categories == null) %}
			<tr>
				<td colspan="6">There is no one here... <a href="{{ path('app_admin_create_category') }}">Create a new category</a></td>
			</tr>
		{% else %}


			<tbody>
				{% for category in categories %}
					<tr>

						<td>
							<a href="{{ path('app_admin_show_category', {'id': category.id}) }}">{{ category.name }}
							</a>
						</td>

						<td>
							<a href="{{ path('app_admin_show_category', {'id': category.id}) }}">
								<button class="btn btn-primary">Show</button>
							</a>
						</td>

						<td>
							<a href="{{ path('app_admin_update_category', {'id': category.id}) }}">
								<button class="btn btn-primary">Edit</button>
							</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		{% endif %}
	</table><br>
{% endblock %}
