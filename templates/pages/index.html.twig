                    <div class="card mx-auto">
                        <img src="{{ asset('uploads/productimage/' ~ item.image) }}" class="card-img-top" alt="Card Image">
                        <div class="card-body">
                            <h4 class="card-title">Groupe : {{ item.name }}</h4>
                            <h5 class="card-text">Album : {{ item.description }}</h5>
                              <div class="box-price">
                            <h6 class="card-subtitle mb-2">{{ item.price }} €</h6>
                            </div>
                            <a href="#" class="btn">Accéder à ce produit</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
 
        <div class="row">
            {% for item in products|slice(2, 4) %}
            <div class="col-md-6 mb-4">
                    <div class="card mx-auto">
                        <img src="{{ asset('uploads/productimage/' ~ item.image) }}" class="card-img-top" alt="Card Image">
                        <div class="card-body">
                            <h4 class="card-title">Groupe : {{ item.name }}</h4>
                            <h5 class="card-text">Album : {{ item.description }}</h5>
                              <div class="box-price">
                            <h6 class="card-subtitle mb-2">{{ item.price }} €</h6>
                            </div>
                            <a href="#" class="btn">Accéder à ce produit</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
</div>
</section>
 
<section class="main-body d-flex justify-content-center">
    <hr class="hr">
</section>
 
 
 
{% endblock %}