{% extends app.request.attributes.get('_route') is same as('app_login') ? 'base.html.twig' : 'adminBase.html.twig' %}

{% block title %}Vintyle - Connexion
{% endblock %}

{% block main %}
	<section>
		<div class="section-login">
			<div>
			<form method="post" >
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path( logoutpath) }}">Logout</a>
					</div>
				{% endif %}
					<h1>Connectez-vous Ã  votre compte Vintyle</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="inputEmail"  autocomplete="email" required autofocus placeholder="E-mail" >
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="_password" id="inputPassword"  autocomplete="current-password" require placeholder="Mot de passe">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button  type="submit">Connectez-vous</button>
			</form>
			</div>
		</div>
	</section>
{% endblock %}
